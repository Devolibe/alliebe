<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">

    <TextView
        android:id="@+id/txt_ur_info_plz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="82dp"
        android:lineSpacingExtra="6sp"
        android:text="당신의 정보를\n아래에 적어주세요:)"
        android:textColor="#de000000"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- android:fontFamily="@font/nanum_square_l" -->

    <EditText
        android:id="@+id/et_email_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif"
        android:hint="이메일"
        android:lineSpacingExtra="6sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ur_info_plz"
        />

    <EditText
        android:id="@+id/et_password_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:hint="비밀번호"
        android:lineSpacingExtra="6sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_signin"
        />

    <TextView

        android:id="@+id/hint_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ex\@ex.ex"
        android:textColor="#808080"
        android:layout_marginEnd="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_email_signin"
        app:layout_constraintEnd_toEndOf="@id/et_email_signin"/>

    <EditText
        android:id="@+id/et_nickname_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:hint="닉네임"
        android:lineSpacingExtra="6sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_signin" />

    <EditText
        android:id="@+id/et_dateOfBirth_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:hint="생년월일"
        android:lineSpacingExtra="6sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nickname_signin" />

    <TextView

        android:id="@+id/hint_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYYY/MM/DD"
        android:textColor="#808080"
        android:layout_marginEnd="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_dateOfBirth_signin"
        app:layout_constraintEnd_toEndOf="@id/et_dateOfBirth_signin"

        />

    <EditText
        android:id="@+id/txt_sex_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:editable="false"
        android:fontFamily="sans-serif"
        android:hint="성별"
        android:lineSpacingExtra="6sp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dateOfBirth_signin">


    </EditText>

    <RadioGroup
        android:id="@+id/rg_sex_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/txt_sex_signin"
        app:layout_constraintEnd_toEndOf="@id/txt_sex_signin"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/txt_sex_signin">


        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성"
            android:textColor="#B2B2B2"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남성"
            android:textColor="#B2B2B2"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textColor="#B2B2B2"
            android:textSize="16sp" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/ibtn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:background="#0000"
        android:src="@drawable/imgbtn_states"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rg_sex_signin" />


</androidx.constraintlayout.widget.ConstraintLayout>
