<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectPartnerActivity">

    <TextView
        android:id="@+id/txt_connect_connect_partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="82dp"
        android:lineSpacingExtra="6sp"
        android:textColor="#de000000"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="연인이 있다면\n연결해주세요!">

    </TextView>

    <androidx.appcompat.widget.AppCompatEditText

        android:id="@+id/et_searchPartner_connect_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="45dp"
        android:hint="연인의 닉네임을 입력해 주세요."
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6sp"
        android:textColor="#de000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_connect_connect_partner" />


    <ImageButton
        android:id="@+id/btn_searchPartner_connect_partner"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/imgbtn_search"
        app:layout_constraintEnd_toEndOf="@+id/et_searchPartner_connect_partner"
        app:layout_constraintTop_toTopOf="@id/et_searchPartner_connect_partner"
        app:layout_constraintBottom_toBottomOf="@id/et_searchPartner_connect_partner"
        android:background="#0000"
        android:scaleType="fitXY"
        ></ImageButton>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_searchPartner_connect_partner"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="114dp"
        android:text="아뇨, 건너뛸래요."
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>